@model IEnumerable<Hv.Ppb302.DigitalThesis.WebClient.Models.ConnectorTag>
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<div class="admin-container flex-column">
    <div class="admin-form">
        <div class="form-btn-container">
            <a class="form-return-btn" asp-controller="Admin" asp-action="Index">Return</a>
            <a class="form-return-btn" asp-action="Create">Create New</a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) 
            {
                <tr class="form-table-row">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
