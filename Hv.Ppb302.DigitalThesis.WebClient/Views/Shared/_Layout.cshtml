<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="images/logo.png" type="image/x-icon">
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index"><img class="logo" src="~/images/logo.png" alt="Logotype of Mona Tynkkinen"/></a>
            <ul class="nav-list">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link nav-link-ltr" href="javascript:void(0);" onclick="showLoginOverlay()">Log in</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Logout">Log out</a>
                    </li>
                }
                <li>
                    <a class="nav-link nav-link-ltr" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li>
                    <a class="nav-link nav-link-ltr" asp-controller="Home" asp-action="Index">Tutorial</a>
                </li>
          
            </ul>
        </nav>
    </header>

    <div id="overlay" class="overlay" style="display: none;">
        <div class="login-section">
            <div class="close-btn" onclick="hideLoginOverlay()">&times;</div>
            <div class="heading">
                <h2>Welcome</h2>
                <p>Log in to manage the mosaics</p>
            </div>
            <form class="login-form" method="post" action="/Admin/Index">
                <div class="input">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" autocomplete="off" required />
                </div>
                <div class="input">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" />
                </div>
                <div class="button input">
                     <button type="submit" onclick="return validateLoginForm()">Log in</button>
                </div>
            </form>
        </div>
    </div>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer"></footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/mosaics.js" asp-append-version="true"></script>
    <script src="~/js/authentication.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
