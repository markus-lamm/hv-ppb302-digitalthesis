<!DOCTYPE html>
<html lang="en">
@{
    var username = Context.Session.GetString("Username");
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="https://informatik13.ei.hv.se/DigitalThesis/images/icons/logo.png" type="image/x-icon">
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/go.min.js"></script>
    <script>hljs.highlightAll();</script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/default.min.css">
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@yaireo/tagify'></script>")
    @Html.Raw("<link href='https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css' rel='stylesheet' type='text/css' />")
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jodit/jodit.css" />
    <script src="https://cdn.jsdelivr.net/npm/medium-zoom@1.1.0/dist/medium-zoom.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/medium-zoom@1.1.0/dist/style.min.css" rel="stylesheet">
    <script src="https://raw.githack.com/SortableJS/Sortable/master/Sortable.js"></script>
</head>
<body>
    <header>
        <nav class="navbar" id="navbar">
            <a asp-controller="Home" asp-action="Geotags"><img class="nav-logo" src="~/images/icons/logo.png" alt="Logotype of Mona Tynkkinen"/></a>
            <ul class="nav-list">
                @if (username != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Logout">Log out</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Login">Log in</a>
                    </li>
                }
                <li>
                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Home" asp-action="Geotags" asp-route-showTutorial="true">Tutorial</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Home" asp-action="Materials" >Materials</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Home" asp-action="Intro">Meanwhile</a>
                </li>
            </ul>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <div id="size-guard" class="size-guard">
        <img src="~/images/icons/logo.png" class="size-guard-img" />
        Screen size is too small. Please resize your window or if you are using a smartphone, please open the website on a laptop.
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jodit/jodit.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/richeditor.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
