@model Page
@{
    ViewData["Title"] = "About";
}

<head>
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
</head>

<div class="about-container">
    <div class="about-content">
        <div class="about-text">
            @if (!String.IsNullOrEmpty(Model.Content) && Model.Content.Trim().ToString() != "<p><br></p>")
            {
                <div class="text" id="editor">
                    @Html.Raw(Model.Content)
                </div>
            }
            else{
                <p>
                    About content is empty
                </p>
            }
        </div>
        <img class="about-logo" src="~/images/logo.png" alt="Logotype of Mona Tynkkinen" />
    </div>
</div>