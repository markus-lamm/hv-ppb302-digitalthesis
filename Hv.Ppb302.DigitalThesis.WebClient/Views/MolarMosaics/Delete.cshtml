@model Hv.Ppb302.DigitalThesis.WebClient.Models.MolarMosaic
@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<div class="background-container background-image"></div>
<div class="main-container flex-horizontal-center">
    <div class="admin-container">
        <div class="admin-form">
            <div class="form-btn-container">
                <a class="form-main-btn" asp-action="Index">Return</a>
            </div>
            <div class="form-header-container molar-color">
                <div class="form-header-count">Delete</div>
                <div class="form-header-name">Molar mosaics</div>
            </div>
            <div class="form-table-container">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <h2>Are you sure you want to delete this?</h2>
                    <h3>@Html.DisplayFor(model => model.Title)</h3>
                    <div class="form-btn-container flex-row-reverse">
                        <button class="form-main-btn delete" type="submit">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
