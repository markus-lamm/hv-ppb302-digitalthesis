@model Hv.Ppb302.DigitalThesis.WebClient.Models.MolecularMosaic
@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<div class="background-container background-image"></div>
<div class="main-container flex-horizontal-center">
    <div class="admin-container">
        <div class="admin-form">
            <div class="form-btn-container">
                <a class="form-main-btn" asp-action="Index">Return</a>
            </div>
            <div class="form-header-container molecular-color">
                <div class="form-header-count">Delete</div>
                <div class="form-header-name">Molecular mosaics</div>
            </div>
            <div class="form-table-container">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <table class="form-table">
                        <thead>
                            <tr>
                                <th class="form-table-header">
                                    Are you sure you want to delete this?
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="form-table-row">
                                <td class="form-table-data">
                                    @Html.DisplayFor(model => model.Title)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-btn-container flex-row-reverse">
                        <button class="form-main-btn btn-red" type="submit">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
